   else
        # try to use tcl/tk without X (e.g. on Mac OS X native aqua Tcl/Tk impl)
        OPP_CHECK_LIB(Tcl/Tk 8.6, tk.h, Tk_MainLoop(), $CFLAGS $TK_CFLAGS86, -ltk8.6 -ltcl8.6,
                          tcltk_ok, TK_LIBS="-ltk8.6 -ltcl8.6" TK_CFLAGS=$TK_CFLAGS86)
