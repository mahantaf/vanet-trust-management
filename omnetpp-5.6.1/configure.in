   fi

   if test -n "$TK_LIBS"; then
        OPP_CHECK_LIB(Tcl/Tk, tk.h, Tk_MainLoop(), $TK_CFLAGS, $TK_LIBS, tcltk_ok)
   elif test "$TOOLCHAIN_NAME" = "clangc2"; then
