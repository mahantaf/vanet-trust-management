Simple.erlang_k_par =        erlang_k(1, 1.0, 9)
Simple.chi_square_par =      chi_square(2, 9)
Simple.student_t_par =       student_t(1, 9)
Simple.cauchy_par =          cauchy(1.0, 2.0, 9)
Simple.triang_par =          triang(1.0, 2.0, 3.0, 9)
Simple.lognormal_par =       lognormal(1.0, 1.0, 9)
Simple.weibull_par =         weibull(1.0, 2.0, 9)
