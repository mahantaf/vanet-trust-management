%description:
Test submodule and connection inheritance.

%file: test.ned

import testlib.Dump;

module Node
{
    gates:
        input in1;
        input in2;
        output out1;
        output out2;
    connections allowunconnected:
}

module Super
{
    submodules:
        a1: Node;
        a2: Node;
    connections:
        a1.out1 --> a2.in1;
        a2.out1 --> a1.in1;
}

network Test extends Super
{
    submodules:
        b1: Node;
        b2: Node;
        dump: Dump;
    connections:
        b1.out1 --> b2.in1;
        b2.out1 --> b1.in1;
        a1.out2 --> b1.in2;
        b1.out2 --> a1.in2;
        a2.out2 --> b2.in2;
        b2.out2 --> a2.in2;
}

%contains: stdout
module Test: Test {
    parameters:
        @isNetwork
    submodules:
        module Test.a1: Node {
            gates:
                in1: <-- a2.out1
                in2: <-- b1.out2
                out1: --> a2.in1
                out2: --> b1.in2
        }
        module Test.a2: Node {
            gates:
                in1: <-- a1.out1
                in2: <-- b2.out2
                out1: --> a1.in1
                out2: --> b2.in2
        }
        module Test.b1: Node {
            gates:
                in1: <-- b2.out1
                in2: <-- a1.out2
                out1: --> b2.in1
                out2: --> a1.in2
        }
        module Test.b2: Node {
            gates:
                in1: <-- b1.out1
                in2: <-- a2.out2
                out1: --> b1.in1
                out2: --> a2.in2
        }
}
