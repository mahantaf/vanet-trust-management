%description:
Comments and processing instructions are ignored.

%file: test.xml
<?xml version="1.0" ?>
<!-- starting comment -->
<foo id="1">
    <foo id="2" color="red">one</foo>
    <bar id="3" color="red">
        <foo id="4">two
           <!-- some in between -->
        </foo>
        <!-- and here too -->
        <bar id="5">three</bar>
    </bar>
</foo>
<!-- trailing comment -->

%activity:
cXMLElement *node = getEnvir()->getXMLDocument("test.xml");
EV << node->getXML();

%contains-regex: stdout
<foo id="1">[ \n]*
  <foo color="red" id="2">one</foo>
  <bar color="red" id="3">[ \n]*
    <foo id="4">two

        </foo>[ \n]*
    <bar id="5">three</bar>
  </bar>
</foo>
